@model Vidly_1._0.Models.Movie
@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li> Genre : @Model.Genres.Name</li>
    <li> Release Date : @Model.ReleasedDate.ToLongDateString()</li>
    <li> Date Added : @Model.DateAdded.ToLongDateString()</li>
    <li> Number In Stocks : @Model.NumberInStocks</li>
</ul>

